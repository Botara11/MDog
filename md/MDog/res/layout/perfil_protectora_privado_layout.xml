<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" >
    
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        android:orientation="vertical" >

       <TabHost
	
	android:id="@+id/TabHostProtectoraPrivado"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#EFEFEF">
	
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TabWidget
			android:id="@android:id/tabs"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />

			<FrameLayout
				android:id="@android:id/tabcontent"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

				<FrameLayout
					android:id="@+id/tabperrosprotectoraPrivado"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" >
					
				    <LinearLayout
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="match_parent">

					<ListView
					    android:id="@+id/ListViewPerrosProtectoraPrivado"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content" >
					</ListView>
					    
					</LinearLayout>

				</FrameLayout>

				<FrameLayout
					android:id="@+id/tabperfilprotectoraPrivado"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">
					
				 <RelativeLayout  
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F0F0F0" >

                                <RelativeLayout
                                    android:id="@+id/LinearLayoutcuadroPrivado"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/park1"
                                    android:orientation="vertical" >

                                    <EditText
                                        android:id="@+id/NombreProtectoraPrivado"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:background="#00000000"
                                        
                                        android:maxLength="10"
                                    
                                        android:focusableInTouchMode="false"
                                        android:gravity="center"
                                        android:hint="Nombre"
                                        android:inputType="textPersonName"
                                        android:text="El Puig"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="@color/white"
                                        android:textIsSelectable="false"
                                        android:textSize="30sp" >

                                        <requestFocus />
                                    </EditText>

                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/LinearLayouticonosPrivado"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_below="@+id/LinearLayoutcuadroPrivado"
                                    android:background="@drawable/linearregistro"
                                    android:orientation="vertical" >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" >

                                        <RelativeLayout
                                            android:id="@+id/relativeLayout1Privado"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent" >
                                        </RelativeLayout>

                                        <EditText
                                            android:id="@+id/CiudadProtectoraPrivado"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            
                                            android:layout_centerVertical="true"
                                            
                                            android:background="#00000000"
                                            android:clickable="false"
                                            
                                            android:focusableInTouchMode="false"
                                            android:gravity="center"
                                            android:hint="Raza"
                                            android:inputType="textEmailAddress"
                                            
                                            android:text="Torrent"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:textColor="@color/black"
                                            android:textIsSelectable="false"
                                            android:textSize="16sp"
                                            android:layout_centerHorizontal="true"
                                             />

                                        <Button
                                            android:id="@+id/BotonEditarPerfilProtectoraPrivado"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginRight="3dp"
                                            android:layout_marginBottom="1dp"
                                            android:paddingLeft="5dp"
                                            android:paddingRight="5dp"
                                            android:text="Editar Perfil"
                                            android:textSize="12sp"
                                            android:textColor="@color/white"
                                            android:background="@drawable/button_gplus_gb" />

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"
                                    android:layout_below="@+id/LinearLayoutcuadroPrivado"
                                    android:background="@drawable/cuadro_muro_sombra"
                                    android:orientation="vertical" >
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/linearLayout1"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignLeft="@+id/LinearLayoutfotoPrivado"
                                    android:layout_alignRight="@+id/LinearLayoutfotoPrivado"
                                    android:layout_below="@+id/LinearLayoutfotoPrivado"
                                    android:background="@drawable/cuadro_muro_sombra"
                                    android:orientation="vertical" >
                                </LinearLayout>
                                
                                <RelativeLayout
                                    android:id="@+id/RelativeLayoutDatosProtectoraPrivado"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/LinearLayouticonosPrivado"
                                    android:background="@drawable/linearregistro"
                                    android:orientation="vertical" >
                                
                                    <LinearLayout
    				    android:id="@+id/LinearLayoutDireccionPrivado"
    				    android:layout_width="match_parent"
    				    android:layout_height="40dp"
    				    android:layout_alignParentTop="true"
    				    android:background="@drawable/linearregistro"
    				    android:orientation="vertical"
    				    android:padding="10dp" >

    				    <EditText
    				        android:id="@+id/DireccionProtectoraPrivado"
    				        android:layout_width="match_parent"
    				        android:layout_height="wrap_content"
    				        android:background="#00000000"
    				        android:focusableInTouchMode="false"
    				        android:hint="Dirección"
    				        android:inputType="textPersonName" />
    				</LinearLayout>
    				
    				 <LinearLayout
    				    android:id="@+id/LinearLayoutTelefonoPrivado"
    				    android:layout_width="match_parent"
    				    android:layout_height="40dp"
    				    android:layout_below="@+id/LinearLayoutDireccionPrivado"
    				    android:background="@drawable/linearregistro"
    				    android:orientation="vertical"
    				    android:padding="10dp" >

    				    <EditText
    				        android:id="@+id/TelefonoProtectoraPrivado"
    				        android:layout_width="match_parent"
    				        android:layout_height="wrap_content"
    				        android:background="#00000000"
    				        android:focusableInTouchMode="false"
    				        android:hint="Teléfono"
    				        android:inputType="textPersonName" />
    				</LinearLayout>
    				
    				 <LinearLayout
    				    android:id="@+id/LinearLayoutCorreoPrivado"
    				    android:layout_width="match_parent"
    				    android:layout_height="40dp"
    				    android:layout_below="@+id/LinearLayoutTelefonoPrivado"
    				    android:background="@drawable/linearregistro"
    				    android:orientation="vertical"
    				    android:padding="10dp" >

    				    <EditText
    				        android:id="@+id/CorreoProtectoraPrivado"
    				        android:layout_width="match_parent"
    				        android:layout_height="wrap_content"
    				        android:background="#00000000"
    				        android:focusableInTouchMode="false"
    				        android:hint="E-mail"
    				        android:inputType="textEmailAddress" />
    				</LinearLayout>
    				
    				 <LinearLayout
    				    android:id="@+id/LinearLayoutWebPrivado"
    				    android:layout_width="match_parent"
    				    android:layout_height="40dp"
    				    android:layout_below="@+id/LinearLayoutCorreoPrivado"
    				    android:background="@drawable/linearregistro"
    				    android:orientation="vertical"
    				    android:padding="10dp" >

    				    <EditText
    				        android:id="@+id/WebProtectoraPrivado"
    				        android:layout_width="match_parent"
    				        android:layout_height="wrap_content"
    				        android:background="#00000000"
    				        android:focusableInTouchMode="false"
    				        android:hint="Dirección Web"
    				        android:inputType="textEmailAddress" />
    				</LinearLayout>
                                
    				 
                                
                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/linearLayout3Privado"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/LinearLayouticonosPrivado"
                                    android:background="@drawable/cuadro_muro_sombra"
                                    android:orientation="vertical" >
                                </LinearLayout>
                                
                                

                                <LinearLayout
                                    android:id="@+id/LinearLayoutfotoPrivado"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="36dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_alignParentLeft="true"
                                    android:background="@drawable/linearregistro"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/ImageViewFotoProtectoraPrivado"
                                        android:layout_width="90dp"
                                        android:layout_height="80dp"
                                        android:layout_margin="1dp"
                                        android:layout_marginLeft="0dp"
                                        android:contentDescription="desc"
                                        android:src="@drawable/coocker" />

                                </LinearLayout>
                                
                                
                                <LinearLayout
                                    android:id="@+id/linearaceptarcancelarProtectora"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="0dp"
                                    android:background="@android:color/transparent"
                                     >
                                
                                    
                                    <TableRow
                                android:id="@+id/TableRowProtectoraPrivado"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@color/red"
                                android:gravity="center_horizontal"
                                android:visibility="invisible" >

                                <Button
                                    android:id="@+id/cancelarProtectoraPrivado"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:background="@color/red"
                                    android:gravity="center"
                                    android:padding="5dip"
                                    android:text="Cancelar"
                                    android:textColor="@color/white" />

                                <View
                                    android:layout_width="1dip"
                                    android:layout_height="fill_parent"
                                    android:layout_margin="10dp"
                                    android:background="#000000" />

                                <Button
                                    android:id="@+id/AceptarProtectoraPrivado"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:background="@color/red"
                                    android:gravity="center"
                                    android:padding="5dip"
                                    android:text="Aceptar"
                                    android:textColor="@color/white" />
                            </TableRow>
                                
                                </LinearLayout>
                                
                                
                                
</RelativeLayout>
					
					
				</FrameLayout>	
				
				

			</FrameLayout>
	</LinearLayout>
</TabHost>


    </LinearLayout>

    <Button
        android:id="@+id/button_prinProtectoraPrivado"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button_gplus_gb"
        android:text="Añadir Perro"
        android:textColor="@color/white" />

</RelativeLayout>