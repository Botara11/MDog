<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        >
    </RelativeLayout>
<!-- MASTER3 -->
    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:layout_margin="0dp"
        android:background="@drawable/park1"
        android:gravity="center"
        android:text="Mapa"
        android:onClick="botonMapa"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/button1"
        android:layout_margin="0dp"
        android:background="@drawable/retiro"
        android:text="Crea Zona"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_accede"
        android:shadowColor="#990000"
        android:text="Mi perfil"
        android:onClick="botonMiPerfil"
        android:textColor="@color/white" />

</RelativeLayout>