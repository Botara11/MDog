                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F0F0F0" >

                                <RelativeLayout
                                    android:id="@+id/LinearLayoutcuadro"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/park1"
                                    android:orientation="vertical" >
                                    
                                    <EditText
                                            android:id="@+id/NombreParque"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                           
                                            android:background="#00000000"
                                            android:focusableInTouchMode="false"
                                            android:layout_centerHorizontal="true"
                                            android:gravity="center"
                                            android:hint="Nombre"
                                            android:inputType="textPersonName"
                                            android:maxLength="15"
                                            android:text="Retirogfhgjfghfhgfghjfhjg"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:textColor="@color/white"
                                            android:textIsSelectable="false"
                                            android:textSize="30sp" />

                                    

                                    
                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/LinearLayouticonos"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_below="@+id/LinearLayoutcuadro"
                                    android:background="@drawable/linearregistro"
                                    android:orientation="vertical" >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" >

                                        <RelativeLayout
                                            android:id="@+id/relativeLayout1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent" >
                                        </RelativeLayout>

                                        <EditText
                                            android:id="@+id/textCiudadParque"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            
                                            android:layout_centerVertical="true"
                                            
                                            android:background="#00000000"
                                            android:clickable="false"
                                            
                                            android:focusableInTouchMode="false"
                                            android:gravity="center"
                                            android:hint="Raza"
                                            android:inputType="textEmailAddress"
                                            
                                            android:text="Madrid"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:textColor="@color/black"
                                            android:textIsSelectable="false"
                                            android:textSize="16sp"
                                            android:layout_centerHorizontal="true"
                                             />

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"
                                    android:layout_below="@+id/LinearLayoutcuadro"
                                    android:background="@drawable/cuadro_muro_sombra"
                                    android:orientation="vertical" >
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/linearLayout1"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignLeft="@+id/LinearLayoutfoto"
                                    android:layout_alignRight="@+id/LinearLayoutfoto"
                                    android:layout_below="@+id/LinearLayoutfoto"
                                    android:background="@drawable/cuadro_muro_sombra"
                                    android:orientation="vertical" >
                                </LinearLayout>
                                
                                <RelativeLayout
                                    android:id="@+id/RelativeLayoutDatosProtectora"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/LinearLayouticonos"
                                    android:background="@drawable/linearregistro"
                                    android:orientation="vertical" >
                                
                                    <LinearLayout
    				    android:id="@+id/LinearLayoutDireccion"
    				    android:layout_width="match_parent"
    				    android:layout_height="40dp"
    				    android:layout_alignParentTop="true"
    				    android:background="@drawable/linearregistro"
    				    android:orientation="vertical"
    				    android:padding="10dp" >

    				    <EditText
    				        android:id="@+id/EditTextDireccion"
    				        android:layout_width="match_parent"
    				        android:layout_height="wrap_content"
    				        android:background="#00000000"
    				        android:focusableInTouchMode="false"
    				        android:hint="DirecciÃ³n"
    				        android:inputType="textPersonName" />
    				</LinearLayout>
    				
    				 

    				    
                                
    				 
                                
                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/linearLayout3"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/LinearLayouticonos"
                                    android:background="@drawable/cuadro_muro_sombra"
                                    android:orientation="vertical" >
                                </LinearLayout>
                                
                                

                                <RelativeLayout
                                    android:id="@+id/LinearLayoutfoto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="36dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_alignParentLeft="true"
                                    android:background="@drawable/linearregistro"
                                    android:orientation="vertical" >

                                </RelativeLayout>
                                
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/LinearLayoutcuadro"
                                    android:layout_marginLeft="32dp"
                                    android:layout_toRightOf="@+id/LinearLayoutfoto" >

                                        
                                        
                                    </RelativeLayout>
                                
                                
                                
                                
                            </RelativeLayout>