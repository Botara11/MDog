<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0" >
    
   

    <RelativeLayout
        android:id="@+id/LinearLayoutcuadro"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/park1"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:text="Lassie"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/textRaza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Nombre"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="#00000000"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:hint="Raza"
            android:inputType="textEmailAddress"
            android:onClick="onClickRazas"
            android:text="Akita Inu"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textIsSelectable="false"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinearLayouticonos"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/LinearLayoutcuadro"
        android:background="@drawable/linearregistro"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/NumeroAdorables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="73dp"
                android:background="@null"
                android:inputType="number"
                android:text="10"
                android:focusableInTouchMode="false"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/Macho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="92dp"
                android:src="@drawable/macho" />

            <EditText
                android:id="@+id/textEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:inputType="textPersonName"
                android:text="10 años"
                android:focusableInTouchMode="false"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ImageView
                android:id="@+id/Adorable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/NumeroAdorables"
                android:layout_marginRight="13dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/lovely" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/LinearLayoutcuadro"
        android:background="@drawable/cuadro_muro_sombra"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/LinearLayoutfoto"
        android:layout_alignRight="@+id/LinearLayoutfoto"
        android:layout_below="@+id/LinearLayoutfoto"
        android:background="@drawable/cuadro_muro_sombra"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/LinearLayouticonos"
        android:background="@drawable/cuadro_muro_sombra"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutfoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/linearregistro"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ImageViewFotoPeRRo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:layout_marginLeft="0dp"
            android:contentDescription="desc"
            android:src="@drawable/coocker" />
    </LinearLayout>

    <TextView
        android:id="@+id/AficionesTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LinearLayoutfoto"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/tab_redondeado"
        android:text="Aficiones"
        android:textColor="@color/white"
        android:textIsSelectable="false" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/LinearLayout01"
        android:layout_alignRight="@+id/LinearLayout01"
        android:layout_below="@+id/LinearLayout01"
        android:background="@drawable/cuadro_muro_sombra"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/LinearLayout06"
        android:layout_alignRight="@+id/LinearLayout06"
        android:layout_below="@+id/LinearLayout06"
        android:background="@drawable/cuadro_muro_sombra"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_above="@+id/LinearLayout06"
        android:layout_alignTop="@+id/EditText06"
        android:layout_toRightOf="@+id/EditText06"
        android:background="@drawable/tab_redondeado"
        android:text="A"
        android:textColor="@color/white"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_above="@+id/LinearLayout06"
        android:layout_alignLeft="@+id/TextView04"
        android:background="@drawable/tab_redondeo_inferior"
        android:textColor="@color/white"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/EditText06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="20dp"
        android:background="@drawable/tab_redondeado"
        android:editable="false"
        android:text="Personalidad"
        android:textColor="@color/white"
        android:textIsSelectable="false" />

    <LinearLayout
        android:id="@+id/LinearLayout06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditText06"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_below="@+id/EditText06"
        android:background="@drawable/linearregistro"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/Personalidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:focusableInTouchMode="false"
            android:text="Cariñoso, Besucón..."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="false"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AficionesTab"
        android:layout_below="@+id/AficionesTab"
        android:layout_marginRight="10dp"
        android:background="@drawable/linearregistro"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/Aficiones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:focusableInTouchMode="false"
            android:text="A Lassie le encanta correr por la montaña y tomar el sol junto a Heidi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="false"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_above="@+id/LinearLayout01"
        android:layout_alignTop="@+id/AficionesTab"
        android:layout_toRightOf="@+id/AficionesTab"
        android:background="@drawable/tab_redondeado"
        android:text="A"
        android:textColor="@color/white"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_above="@+id/LinearLayout01"
        android:layout_alignLeft="@+id/TextView01"
        android:background="@drawable/tab_redondeo_inferior"
        android:textColor="@color/white"
        android:textIsSelectable="false" />

    <Button
        android:id="@+id/adorable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/boton_adorable"
        android:text="¡Adorable!"
        android:textColor="@color/white"
        android:onClick="onclickadorable" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_margin="3dp"
        android:text="Ver Dueño"
        android:padding="5dp"
        android:onClick="onclickperfildueno"
        android:background="@drawable/button_gplus_gb"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_margin="3dp"
        android:padding="5dp"
        android:text="Pedir Cita"
        android:background="@drawable/button_gplus_gb"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white" />

</RelativeLayout>







