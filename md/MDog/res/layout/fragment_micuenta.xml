<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabcontentMiCuenta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#EFEFEF" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:tabStripEnabled="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" >

                        <FrameLayout
                            android:id="@+id/tab1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F0F0F0" >

                                <RelativeLayout
                                    android:id="@+id/LinearLayoutcuadro"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/park1"
                                    android:orientation="vertical" >

                                    
                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/LinearLayouticonos"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_below="@+id/LinearLayoutcuadro"
                                    android:background="@drawable/linearregistro"
                                    android:orientation="vertical" >

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" >

                                        <RelativeLayout
                                            android:id="@+id/relativeLayout1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent" >
                                        </RelativeLayout>

                                        <EditText
                                            android:id="@+id/textCiudad"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_centerVertical="true"
                                            android:background="#00000000"
                                            android:clickable="false"
                                            android:focusableInTouchMode="false"
                                            android:gravity="center"
                                            android:hint="Ciudad"
                                            android:maxLength="15"
                                            android:inputType="textCapWords"
                                            
                                            android:text="Torrent"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:textColor="@color/black"
                                            android:textIsSelectable="false"
                                            android:textSize="16sp" />

                                        <Button
                                            android:id="@+id/ButtonEditarPerfil"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_alignParentTop="true"
                                            android:layout_marginRight="3dp"
                                            android:layout_marginBottom="1dp"
                                            android:paddingLeft="5dp"
                                            android:paddingRight="5dp"
                                            android:text="Editar Perfil"
                                            android:textSize="12sp"
                                            android:textColor="@color/white"
                                            android:background="@drawable/button_gplus_gb"
                                            android:onClick="EditarPerfilMiCuenta" />

                                    </RelativeLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="3dp"
                                    android:layout_below="@+id/LinearLayoutcuadro"
                                    android:background="@drawable/cuadro_muro_sombra"
                                    android:orientation="vertical" >
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/linearLayout1"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignLeft="@+id/LinearLayoutfoto"
                                    android:layout_alignRight="@+id/LinearLayoutfoto"
                                    android:layout_below="@+id/LinearLayoutfoto"
                                    android:background="@drawable/cuadro_muro_sombra"
                                    android:orientation="vertical" >
                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/RelativeLayoutListViewPerros"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_below="@+id/LinearLayouticonos"
                                    android:background="@drawable/linearregistro"
                                    android:orientation="vertical" >

                                    <LinearLayout
                                        android:id="@+id/linearLayoutListViewPerros"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="50dp"
                                        android:background="@drawable/linearregistro"
                                        android:orientation="vertical" >
                                    </LinearLayout>
                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/linearLayout3"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/LinearLayouticonos"
                                    android:background="@drawable/cuadro_muro_sombra"
                                    android:orientation="vertical" >
                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/LinearLayoutfoto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="36dp"
                                    android:background="@drawable/linearregistro"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/ImageViewFotoDueno"
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:layout_margin="1dp"
                                        android:layout_marginLeft="0dp"
                                        android:contentDescription="desc"
                                        android:src="@drawable/sombra_persona" />
                                </RelativeLayout>
                                
                                <RelativeLayout
                                    android:id="@+id/RelativeNombreDueno"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/LinearLayoutcuadro"
                                    android:gravity="left"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/LinearLayoutfoto"
                                    android:orientation="vertical" >
                                    
                                    <EditText
                                        android:id="@+id/NombreDueno"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="left"
                                        android:layout_alignParentBottom="true"
                                        android:layout_centerHorizontal="true"
                                        android:focusableInTouchMode="false"
                                        android:hint="Nombre"
                                        android:maxLength="10"
                                        android:inputType="textCapWords"
                                        android:text="Jessy"
                                        android:textAppearance="?android:attr/textAppearanceLarge"
                                        android:textColor="@color/white"
                                        android:textIsSelectable="false"
                                        android:textSize="30sp" >

                                        <requestFocus />
                                    </EditText>
                                    
                                    
                               </RelativeLayout>
                            </RelativeLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/tab2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />

                        <FrameLayout
                            android:id="@+id/tab3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />

                        <FrameLayout
                            android:id="@+id/tab4"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />
                    </FrameLayout>

                    <Button
                        android:id="@+id/button_prin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/button_gplus_gb"
                        android:text="AÃ±adir Perro"
                        android:textColor="@color/white" />

                    <TableRow
                        android:id="@+id/TableRowMiCuenta"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/button_gplus_gb"
                        android:clickable="false"
                        android:gravity="center_horizontal"
                        android:visibility="invisible" >

                        <Button
                            android:id="@+id/cancelarMiCuenta"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_gplus_gb"
                            android:gravity="center"
                            android:padding="5dip"
                            android:text="Cancelar"
                            android:textColor="@color/white" />

                        <View
                            android:layout_width="1dip"
                            android:layout_height="fill_parent"
                            android:layout_margin="10dp"
                            android:background="#000000" />

                        <Button
                            android:id="@+id/AceptarMiCuenta"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/button_gplus_gb"
                            android:gravity="center"
                            android:padding="5dip"
                            android:text="Aceptar"
                            android:textColor="@color/white" />
                    </TableRow>
                </RelativeLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>

</RelativeLayout>